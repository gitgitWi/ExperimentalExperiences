{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
